<div class="page-width">
  {% if section.settings.heading != blank %}
    <h1>{{ section.settings.heading }}</h1>
  {% endif %}

  <p>{{ section.settings.description }}</p>
</div>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Custom Heading",
      "default": "Welcome to Dheeraj Singh Page"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This is a sample description."
    }
  ],
  "presets": [
    {
      "name": "Custom Section Preset"
    }
  ]
}
{% endschema %}