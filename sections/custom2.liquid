<div class="page-width">
  {% if section.settings.heading != blank %}
    <h2>{{ section.settings.heading }}</h2>
  {% endif %}
  <p>{{ section.settings.description | newline_to_br }}</p>
</div>

{% schema %}
{
  "name": "Custom Section 2",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Custom 2 Section"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Yeh custom2 section ka description hai."
    }
  ],
  "presets": [
    {
      "name": "Custom 2"
    }
  ]
}
{% endschema %}